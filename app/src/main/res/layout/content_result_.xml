<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6698FF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="akhaled.shahen.com.exchangeme.Result_Activity"
    tools:showIn="@layout/activity_result_">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13.8dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:id="@+id/pro_img"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher_round"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/Indigo"
                android:textSize="20sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:text="Name: "/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textColor="@color/Thistle"
                android:textSize="20sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:id="@+id/product_name"
                android:text="Name: "/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="@color/Indigo"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:text="Since: "/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textSize="20sp"
                android:textColor="@color/Thistle"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:id="@+id/product_time"
                android:text="Name: "/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/Indigo"
                android:textSize="20sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:text="Owner E-mail: "/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textColor="@color/Thistle"
                android:textSize="20sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:id="@+id/product_user_email"
                android:text="Name: "/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/Indigo"
                android:textSize="20sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:text="Price: "/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textColor="@color/Thistle"
                android:textSize="20sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:id="@+id/price"
                android:text="Name: "/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="@color/Indigo"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:text="Capital: "/>
            <TextView
                android:layout_width="0dp"
                android:textColor="@color/Thistle"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textSize="20sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:id="@+id/owner_capital"
                android:text="Name: "/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="@color/Indigo"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:text="Type: "/>
            <TextView
                android:layout_width="0dp"
                android:textColor="@color/Thistle"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textSize="20sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:id="@+id/product_type"
                android:text="Name: "/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/Indigo"
                android:textSize="20sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:text="Description: "/>
            <TextView
                android:layout_width="0dp"
                android:textColor="@color/Thistle"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:scrollbars="vertical|horizontal"
                android:textSize="20sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:id="@+id/owner_description"
                android:text="Name: "/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:scrollbars="vertical|horizontal"
                android:textSize="20sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:id="@+id/owner"
                android:background="@color/colorWhite"
                android:textColor="#6698FF"
                android:onClick="getpath"
                android:text="Get Directions "/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
